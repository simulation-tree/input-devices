<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsAotCompatible>True</IsAotCompatible>
    <WarningLevel>8</WarningLevel>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <Title>Input Devices</Title>
    <Authors>popcron</Authors>
    <Company>simulation-tree</Company>
    <RepositoryUrl>https://github.com/simulation-tree/input-devices</RepositoryUrl>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\worlds\core\Worlds.Core.csproj"/>
    <ProjectReference Include="..\..\types\generator\Types.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\..\worlds\generator\Worlds.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin/Debug/net9.0/InputDevices.dll" Pack="true" PackagePath="tools/debug/InputDevices.dll" Visible="false"/>
    <Content Include="bin/Debug/net9.0/InputDevices.xml" Pack="true" PackagePath="tools/debug/InputDevices.xml" Visible="false"/>
    <Content Include="bin/Release/net9.0/InputDevices.dll" Pack="true" PackagePath="tools/release/InputDevices.dll" Visible="false"/>
    <Content Include="bin/Release/net9.0/InputDevices.xml" Pack="true" PackagePath="tools/release/InputDevices.xml" Visible="false"/>
    <Content Include="build/InputDevices.targets" Pack="true" PackagePath="build/InputDevices.targets" Visible="false"/>
  </ItemGroup>

</Project>